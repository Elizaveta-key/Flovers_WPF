<Controls:MetroWindow x:Class="Flovers_WPF.Order_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Заказы" Height="700" Width="900" EnableDWMDropShadow="True" GlowBrush="#FF17DCF0">
    <Grid>
        <Label Content="Совершенные заказы" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="228" Padding="13,5,5,5" FontSize="20"/>
        <ListView x:Name="lv_orders" HorizontalAlignment="Left" Height="566" Margin="10,52,0,0" VerticalAlignment="Top" Width="872" Background="#FFDFF3F9" BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="bt_refresh" Content="Обновить" HorizontalAlignment="Left" Margin="81,632,0,0" VerticalAlignment="Top" Width="157" Style="{StaticResource AccentedSquareButtonStyle}" OpacityMask="#FF07C7FF"/>
        <Button x:Name="bt_delete" Content="Удалить" HorizontalAlignment="Left" Margin="389,632,0,0" VerticalAlignment="Top" Width="157" Style="{StaticResource AccentedSquareButtonStyle}" OpacityMask="#FF07C7FF"/>
        <Button x:Name="bt_new" Content="Новый заказ" HorizontalAlignment="Left" Margin="680,632,0,0" VerticalAlignment="Top" Width="157" Style="{StaticResource AccentedSquareButtonStyle}" OpacityMask="#FF07C7FF" Click="bt_new_Click"/>

    </Grid>
</Controls:MetroWindow>
